@model Forum.Models.ViewModels.ProfileViewModel // Replace with your actual namespace

@{
    ViewData["Title"] = "Profile";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Profile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProfileImage" class="control-label"></label>
        <input asp-for="ProfileImage" class="form-control-file" type="file" />
        <span asp-validation-for="ProfileImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
